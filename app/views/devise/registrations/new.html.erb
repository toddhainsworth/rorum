<h2>Join</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form_member"><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div class="form_member"><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div class="form_member"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div class="form_member"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="form_member"><%= f.submit "Join" %></div>
<% end %>

<%= render "devise/shared/links" %>
